{% extends 'base.html.twig' %}

{% block title %}Commercants index{% endblock %}

{% block body %}
    <h1>Commercants index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Nom</th>
                <th>Description</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for commercant in commercants %}
            <tr>
                <td>{{ commercant.id }}</td>
                <td>{{ commercant.nom }}</td>
                <td>{{ commercant.description }}</td>
                <td>
                    <a href="{{ path('app_commercants_show', {'id': commercant.id}) }}">show</a>
                    <a href="{{ path('app_commercants_edit', {'id': commercant.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="4">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('app_commercants_new') }}">Create new</a>
{% endblock %}
