{% extends 'base.html.twig' %}

{% block title %}Articles index{% endblock %}

{% block body %}
    <h1>Les articles de la boutique</h1>
    <div class="cards d-flex justify-content-start">
    {% for article in articles %}
            <div class="card m-2" style="width: 18rem;">
                <img src="{{ article.urlImage }}" class="card-img-top" alt="...">
                <div class="card-body">
                    <h5 class="card-title">{{ article.nom }}</h5>
                    <p class="card-text">{{ article.description }}</p>
                    <a href="{{ path('app_articles_show', {'id': article.id}) }}" class="btn btn-primary">Montrer l'article</a>
                    <a href="#" class="btn btn-primary mt-2">Ajouter au panier</a>
                </div>
            </div>
        {% else %}
            <div class="card" style="width: 18rem;">
                <img src="..." class="card-img-top" alt="...">
                <div class="card-body">
                    <h5 class="card-title">no records found</h5>
                    <p class="card-text">no records found</p>
                    {# <a href="#" class="btn btn-primary">Go somewhere</a> #}
                </div>
            </div>
    {% endfor %}
    </div> 
    
    <a href="{{ path('app_articles_new') }}">Create new</a>
{% endblock %}
